{
  "name": "trellohub",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/electron/main.js",
  "scripts": {
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:react": "tsc -b && vite build",
    "build": "npm run build:electron && npm run build:react",
    "start": "npm run build:electron && electron dist/electron/main.js",
    "start:electron": "npx electron dist/electron/main.js --gtk-version=3",
    "dev:electron": "tsc -p tsconfig.electron.json -w",
    "dev:react": "vite",
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\" \"wait-on dist/electron/main.js && electron dist/electron/main.js\""
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@octokit/auth-oauth-app": "^9.0.1",
    "@octokit/rest": "^22.0.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "axios": "^1.9.0",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
